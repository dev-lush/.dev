{
  "compilerOptions": {
      "target": "es2024",
      "module": "ESNext", // Important: Use ESNext
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "rootDir": "src",
      "resolveJsonModule": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./",
      "paths": {
          "*": ["src/*", "*"]
      }
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "dist"
  ]
}